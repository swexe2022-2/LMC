
<% if flash[:notice] %>
	<p style="text-align: center"><%= flash[:notice] %></p>
<% end %><br>
<div class="container", style="max-width:600px">
<div class="form", style="transform: translate(-50%, -0%)">
    <%= form_tag '/top/login', method: :post do %>
        <h5 style="text-align: left">ログイン</h5><br>
        <%= label_tag :name, 'ユーザー名' %>
        <%= text_field_tag :name %><br>
        <%= label_tag :pass, 'パスワード' %>
        <%= password_field_tag :pass %>
        
        <div class="input_wrap", style="text-align: center">
            <%= submit_tag 'ログイン' ,class: "button" %>
        </div>
    <%end%>
    <br><p style="text-align: center">まだアカウントをお持ちでないですか？<%= link_to '新規登録', new_user_path %></p>

</div>
</div>

<br>
