<%= form_for @recipe , url: {action: :update} do |f| %>
    <p><%= f.label :fname, '料理名' %>
    <%= f.text_field :fname %></p>
    <p><%= f.label :ingredients, '材料' %>
    <%= f.text_area :ingredients, :cols => 40, :rows => 10 %></p>
   
    <p><%= f.label :process, '手順' %>
    <%= f.text_area :process,:cols => 40, :rows => 10 %></p>
    
    <p><%= f.label :tag, 'タグ' %></p>
    <%= f.select :tag, [["朝ごはん", "朝ごはん"], ["昼ごはん", "昼ごはん"], ["夜ごはん", "夜ごはん"], ["和食", "和食"],["洋食", "洋食"],["中華料理", "中華料理"],["インド料理", "インド料理"],["韓国料理", "韓国料理"],["イタリア料理", "イタリア料理"],
    ["フランス料理", "フランス料理"],["メキシコ料理", "メキシコ料理"],["南国系", "南国系"],["サラダ類", "サラダ類"],["ヘルシー", "ヘルシー"],["節約", "節約"]], include_blank: "選択して下さい" %>
    <p><%= f.label :image, '画像' %>
    <%= f.file_field :image %></p>
    <p><%= f.label :movie, '動画' %>
    <%= f.file_field :movie %></p>
     <%= f.submit '投稿' %>
<% end %>
