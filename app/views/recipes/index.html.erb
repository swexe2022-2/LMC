
<h4>レシピ</h4>

<!--検索バー-->
<%= form_with url: search_path, method: :get, local: true do |f| %>
    

<div class="search-form">
   <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">youtube_searched_for</i>
          
          <%= f.text_field :keyword, :placeholder => "料理名、食材名を入力", value: @keyword ,class: "autocomplete" %>
          <div class="input_wrap", style="text-align: center">

          <%= f.submit "検索" ,class: "waves-effect waves-light btn-large"%>
          
        
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<% end %>

<div class="row">
    <div class="col s12">
      <div class="row">
        <% @tag_list.each do |t| %>
          <div class="col", style = "padding-top:10px">
            <%= form_with url: tag_search_path, method: :get, local: true do |f| %>
              <%= f.hidden_field :keyword, value: t %>
              <%= f.submit t ,class: "waves-effect waves-light btn-large"%>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
</div>



<!--料理一覧-->
<div class="row">
<% @recipes.each do |recipe| %>
  <div class="col s12 m4 l2">
    <div class="card large">
      <div class="card-image">
        <% if recipe.image != nil %>
      　　<%= image_tag("/get_reciepe/#{recipe.id}") %>
    　　<% else %>
      　　<%= image_tag('obentou.png') %>
    　　<% end %>
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">
          <%= link_to "/recipes/#{recipe.id}" do %>
            <div class="overflow-wrap">
              <div class="break-word ">
               <P><%= recipe.fname %></P>
              </div>
            </div>
          <% end %>
        </span>
        <p><%= recipe.tag %></p>
      </div>
    </div>
  </div>

<% end %>
</div>

