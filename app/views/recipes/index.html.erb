<h5>レシピを探す</h5>
<!--検索バー-->
<%= form_with url: search_path, method: :get, local: true do |f| %>
    

<div class="search-form">
   <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">youtube_searched_for</i>
          
          <%= f.text_field :keyword, :placeholder => "料理名、食材名を入力", value: @keyword ,class: "autocomplete" %>
          <div class="input_wrap", style="text-align: center">

          <%= f.submit "検索" ,class: "button"%>
          
        
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<% end %>

<h5>タグ検索</h5>
<div class="row">
  <div class="col s12">
    <div class="row">
      <% @tag_list.each do |t| %>
        <div class="col", style = "padding-top:10px">
          <%= form_with url: tag_search_path, method: :get, local: true do |f| %>
            <%= f.hidden_field :keyword, value: t %>
            <%= f.submit t ,class: "tag_button"%>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<%= form_with url: tag_search_path, method: :get, local: true do |f| %>
  <div class="search-form">
    <div class="row">
        <div class="row">
          <%= f.hidden_field :keyword, value: "" %>
          <div class="input_wrap", style="text-align: center">
            <%= f.submit "検索条件をリセット" ,class: "button"%>
          </div>
        </div>
      </div>
  </div>
<% end %>



<h5>レシピ一覧</h5>
<!--料理一覧-->
<div class="row">

<% @recipes.each do |recipe| %>
  <div class="col s12 m4 l2">
    <div class="card large">
      <div class="card-image", style="align: center">
        <div class="flex-item">
          <div class="image-wrap">
          <% if recipe.image != nil %>
        　　<%= image_tag("/get_reciepe/#{recipe.id}") %>
      　　<% else %>
        　　<%= image_tag('no_image.jpg') %>
      　　<% end %>
      　　</div>
    　　</div>
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">
          <%= link_to "/recipes/#{recipe.id}" do %>
            <div class="overflow-wrap">
              <div class="break-word ">
               <h5><%= recipe.fname %></h5>
              </div>
            </div>
          <% end %>
        </span>
        <p><%= recipe.tag %></p><br>
        <p><%= safe_join(recipe.ingredients.split("\n"),tag(:br)) %></p>
      </div>
    </div>
  </div>

<% end %>
</div>

